clear

date_str=`date '+%m%d%y_%H%M%S'`
boot_dir=bootimg_$date_str

echo
echo "Creating folder `pwd`/$boot_dir ..."
mkdir $boot_dir

echo
echo "Place the boot.img file under this folder."

scripts/press_enter

cd $boot_dir

if [ -e boot.img ]
then

  cp ../tools/extract_boot_files/extract-*.pl .

  echo
  echo Extracting kernel ...
  ./extract-kernel.pl boot.img

  echo
  echo Extracting ramdisk ... 
  ./extract-ramdisk.pl boot.img

  rm boot.img
  rm extract-*.pl
  cd ..
  echo
  echo Done!
  echo
  echo "Contents of $boot_dir:"
  echo
  echo "`ls -l $boot_dir`"


else
  echo "Error: boot.img not found!"
  echo
  cd ..
  echo "Removing $boot_dir folder"
  rm -rf $boot_dir
  exit 0
fi      
  

